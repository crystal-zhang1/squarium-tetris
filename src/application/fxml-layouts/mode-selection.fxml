                  <FontIcon boundsType="VISUAL" iconColor="WHITE" iconLiteral="mdi-arrow-left-bold" iconSize="30" layoutX="26.0" layoutY="54.0" selectionStart="0" textAlignment="CENTER" />
               </graphic>
            </Button>
            <Text layoutX="168.0" layoutY="52.0" strokeType="OUTSIDE" strokeWidth="0.0" text="CLASSIC MODES" textAlignment="CENTER" wrappingWidth="197.0">
               <font>
                  <Font size="23.0" />
               </font>
            </Text>
            <VBox alignment="CENTER" layoutX="140.0" layoutY="71.0" prefHeight="226.0" prefWidth="250.0" spacing="25.0">
               <children>
                  <Button id="easy-button" mnemonicParsing="false" onAction="#openClassicEasy" prefHeight="44.0" prefWidth="218.0" styleClass="main-button" text="Easy" />
                  <Button id="medium-button" mnemonicParsing="false" onAction="#openClassicMedium" prefHeight="44.0" prefWidth="218.0" styleClass="main-button" text="Medium" />
                  <Button id="hard-button" mnemonicParsing="false" onAction="#openClassicHard" prefHeight="44.0" prefWidth="218.0" styleClass="main-button" text="Hard" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
