<VBox prefHeight="650.0" prefWidth="530.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ModeSelectionController">
   <children>
      <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <Button id="back-button" layoutX="22.0" layoutY="23.0" mnemonicParsing="false" onAction="#openHomeScreen" prefHeight="40.0" prefWidth="40.0" styleClass="mini-button-round">
