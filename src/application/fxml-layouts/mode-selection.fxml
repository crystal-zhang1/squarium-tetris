            </VBox>
            <Text layoutX="168.0" layoutY="326.0" strokeType="OUTSIDE" strokeWidth="0.0" text="OTHER MODES" textAlignment="CENTER" wrappingWidth="197.0">
               <font>
                  <Font size="23.0" />
               </font>
            </Text>
            <VBox alignment="CENTER" layoutX="141.0" layoutY="351.0" prefHeight="166.0" prefWidth="250.0" spacing="50.0">
               <children>
                  <Button id="inverted-button" fx:id="instructionsBtn" mnemonicParsing="false" onAction="#openModeInverted" prefHeight="44.0" prefWidth="218.0" styleClass="main-button" text="Inverted" />
                  <Button id="lock-button" mnemonicParsing="false" onAction="#openModeLock" prefHeight="44.0" prefWidth="218.0" styleClass="main-button" text="Lock" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
